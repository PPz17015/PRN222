<Window x:Class="WpfApp1.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="MainWindow" Height="350" Width="525">
   <Grid>
       <TextBox x:Name="txtURL" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="400"/>
       <Button Content="View HTML" HorizontalAlignment="Left" Margin="420,10,0,0" VerticalAlignment="Top" Width="75" Click="btnViewHtml_click"/>
       <TextBox x:Name="txtContent" HorizontalAlignment="Left" Height="200" Margin="10,40,0,0" VerticalAlignment="Top" Width="485" TextWrapping="Wrap" AcceptsReturn="True"/>
       <Button Content="Clear" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Width="75" Click="btnClear_Click"/>
       <Button Content="Close" HorizontalAlignment="Left" Margin="420,250,0,0" VerticalAlignment="Top" Width="75" Click="btnClose_Click"/>
   </Grid>
</Window>
