@model DemoMVC.Models.Product
@{
    ViewData["Title"] = "Xóa Sản phẩm";
}
<h1>Xóa Sản phẩm</h1>
<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.Category</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div> 