@using BussinessObject
@model SystemAccount
@{
    ViewData["Title"] = "Edit Account";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <i class="fas fa-user-shield fa-3x text-primary mb-2"></i>
                    <h5>Admin Panel</h5>
                    <small class="text-muted">@Context.Session.GetString("UserEmail")</small>
                </div>
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("ManageAccounts", "Admin")">
                            <i class="fas fa-users me-2"></i>
                            Manage Accounts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageNews", "Admin")">
                            <i class="fas fa-newspaper me-2"></i>
                            Manage Articles
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="fas fa-user-edit me-2"></i>
                    Edit Account
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="@Url.Action("ManageAccounts", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Back
                    </a>
                </div>
            </div>

            <!-- Error Messages -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewBag.ErrorMessage
                </div>
            }

            <!-- Edit Account Form -->
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-user-edit me-2"></i>
                               Account Information (ID: @Model.AccountId)
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-action="EditAccount">
                                <input type="hidden" name="AccountId" value="@Model.AccountId" />
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="AccountName" class="form-label">
                                                <i class="fas fa-user me-2"></i>
                                                Account Name <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="AccountName" name="AccountName" 
                                                   value="@Model.AccountName" required>
                                            <span asp-validation-for="AccountName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="AccountEmail" class="form-label">
                                                <i class="fas fa-envelope me-2"></i>
                                                Email <span class="text-danger">*</span>
                                            </label>
                                            <input type="email" class="form-control" id="AccountEmail" name="AccountEmail" 
                                                   value="@Model.AccountEmail" required>
                                            <span asp-validation-for="AccountEmail" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="AccountPassword" class="form-label">
                                                <i class="fas fa-lock me-2"></i>
                                                Password <span class="text-danger">*</span>
                                            </label>
                                            <input type="password" class="form-control" id="AccountPassword" name="AccountPassword" 
                                                   value="@Model.AccountPassword" required>
                                            <span asp-validation-for="AccountPassword" class="text-danger"></span>
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Enter a new password or keep the current password
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="AccountRole" class="form-label">
                                                <i class="fas fa-user-tag me-2"></i>
                                                Role <span class="text-danger">*</span>
                                            </label>
                                            <select class="form-select" id="AccountRole" name="AccountRole" required>
                                                <option value="">-- Select Role --</option>
                                                @if (Model.AccountRole == 1)
                                                {
                                                    <option value="1" selected>Staff</option>
                                                    <option value="2">Lecturer</option>
                                                }
                                                else if (Model.AccountRole == 2)
                                                {
                                                    <option value="1">Staff</option>
                                                    <option value="2" selected>Lecturer</option>
                                                }
                                                else
                                                {
                                                    <option value="1">Staff</option>
                                                    <option value="2">Lecturer</option>
                                                }
                                            </select>
                                            <span asp-validation-for="AccountRole" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-2"></i>
                                        <strong>Note:</strong> 
                                        <ul class="mb-0 mt-2">
                                            <li><strong>Staff:</strong> Employee with limited access rights</li>
                                            <li><strong>Lecturer:</strong> Faculty member with content management rights</li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a href="@Url.Action("ManageAccounts", "Admin")" class="btn btn-secondary me-md-2">
                                        <i class="fas fa-times me-2"></i>
                                        Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>
                                        Update Account
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }

    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
        border-radius: 0.375rem;
        margin: 0.125rem 0.5rem;
    }

    .sidebar .nav-link:hover {
        color: #007bff;
        background-color: rgba(0, 123, 255, 0.1);
    }

    .sidebar .nav-link.active {
        color: #007bff;
        background-color: rgba(0, 123, 255, 0.1);
    }

    main {
        margin-left: 240px;
    }

   
</style> 