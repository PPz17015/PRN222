@model BussinessObject.SystemAccount
@{
    ViewData["Title"] = "Create Account - FU News Management";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <i class="fas fa-user-shield fa-3x text-primary mb-2"></i>
                    <h5>Admin Panel</h5>
                    <small class="text-muted">@Context.Session.GetString("UserEmail")</small>
                </div>
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("ManageAccounts", "Admin")">
                            <i class="fas fa-users me-2"></i>
                            Account Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageNews", "Admin")">
                            <i class="fas fa-newspaper me-2"></i>
                            News Management
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="fas fa-user-plus me-2"></i>
                    Create New Account
                </h1>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }

                            <form asp-action="CreateAccount" method="post">
                                <div class="mb-3">
                                    <label asp-for="AccountName" class="form-label">Account Name</label>
                                    <input asp-for="AccountName" class="form-control" required />
                                    <span asp-validation-for="AccountName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AccountEmail" class="form-label">Email</label>
                                    <input asp-for="AccountEmail" type="email" class="form-control" required />
                                    <span asp-validation-for="AccountEmail" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AccountPassword" class="form-label">Password</label>
                                    <input asp-for="AccountPassword" type="password" class="form-control" required />
                                    <span asp-validation-for="AccountPassword" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AccountRole" class="form-label">Role</label>
                                    <select asp-for="AccountRole" class="form-select" required>
                                        <option value="">Select a role</option>
                                        <option value="1">Staff</option>
                                        <option value="2">Lecturer</option>
                                        <option value="3">Admin</option>
                                    </select>
                                    <span asp-validation-for="AccountRole" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>
                                        Create Account
                                    </button>
                                    <a href="@Url.Action("ManageAccounts", "Admin")" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>
                                        Back to List
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }
    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        margin: 0.2rem 1rem;
    }
    .sidebar .nav-link:hover {
        background-color: rgba(0, 0, 0, .05);
    }
    .sidebar .nav-link.active {
        color: #2470dc;
        background-color: rgba(36, 112, 220, .1);
    }
    .sidebar-sticky {
        position: relative;
        top: 0;
        height: calc(100vh - 48px);
        padding-top: .5rem;
        overflow-x: hidden;
        overflow-y: auto;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 