@model IEnumerable<BussinessObject.NewsArticle>

@{
    ViewData["Title"] = "Manage Articles - Admin Panel";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <i class="fas fa-user-shield fa-3x text-primary mb-2"></i>
                    <h5>Admin Panel</h5>
                </div>
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ManageAccounts", "Admin")">
                            <i class="fas fa-users me-2"></i>
                            Account Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("ManageArticles", "Admin")">
                            <i class="fas fa-newspaper me-2"></i>
                            Articles Management
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">
                            <i class="fas fa-sign-out-alt me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="fas fa-newspaper me-2"></i>
                    Articles Management Report
                </h1>
            </div>

            <!-- Date Filter Section -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-filter me-2"></i>Filter Articles by Date Range
                    </h5>
                    <div class="mt-2">
                        <small class="text-muted">
                            <strong>Form Input:</strong> FromDate input: @ViewBag.FromDate | ToDate input: @ViewBag.ToDate
                            <br><strong>Debug Filter:</strong> From: @ViewBag.DebugFromDate | To: @ViewBag.DebugToDate
                            <br><strong>Count:</strong> All Articles: @ViewBag.DebugAllArticles | Filtered: @ViewBag.DebugFilteredArticles
                            <br><strong>Details:</strong> @ViewBag.DebugDetails
                        </small>
                    </div>
                </div>
                <div class="card-body">
                    <form method="GET" action="@Url.Action("ManageArticles", "Admin")">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label for="fromDate" class="form-label">From Date</label>
                                <input type="date" class="form-control" id="fromDate" name="fromDate" 
                                       value="@ViewBag.FromDate" />
                            </div>
                            <div class="col-md-4">
                                <label for="toDate" class="form-label">To Date</label>
                                <input type="date" class="form-control" id="toDate" name="toDate" 
                                       value="@ViewBag.ToDate" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-2"></i>Filter Articles
                                </button>
                                <a href="@Url.Action("ManageArticles", "Admin")" class="btn btn-outline-secondary ms-2">
                                    <i class="fas fa-redo me-2"></i>Reset
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">Total Articles</h5>
                                    <h2 class="mb-0">@ViewBag.TotalArticles</h2>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-newspaper fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">Published</h5>
                                    <h2 class="mb-0">@ViewBag.PublishedCount</h2>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-eye fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-secondary">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">Drafts</h5>
                                    <h2 class="mb-0">@ViewBag.DraftCount</h2>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-eye-slash fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Articles Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Articles Report
                        <span class="badge bg-primary ms-2">@ViewBag.TotalArticles items</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th width="8%">ID</th>
                                        <th width="35%">Title</th>
                                        <th width="20%">Author</th>
                                        <th width="15%">Category</th>
                                        <th width="15%">Created Date</th>
                                        <th width="7%">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var article in Model)
                                    {
                                        <tr>
                                            <td>@article.NewsArticleId</td>
                                            <td>
                                                <div class="fw-bold">@article.Headline</div>
                                                @if (!string.IsNullOrEmpty(article.NewsContent))
                                                {
                                                    <small class="text-muted">
                                                        @(article.NewsContent.Length > 80 ? article.NewsContent.Substring(0, 80) + "..." : article.NewsContent)
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                @if (article.Account != null)
                                                {
                                                    <span class="fw-bold">@article.Account.AccountEmail.Split('@')[0]</span>
                                                    <br><small class="text-muted">@article.Account.AccountEmail</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown Author</span>
                                                }
                                            </td>
                                            <td>
                                                @if (article.Category != null)
                                                {
                                                    <span class="badge bg-info">@article.Category.CategoryName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Category</span>
                                                }
                                            </td>
                                            <td>
                                                <div>@article.CreatedDate.ToString("dd/MM/yyyy")</div>
                                                <small class="text-muted">@article.CreatedDate.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (article.NewsStatus)
                                                {
                                                    <span class="badge bg-success">Published</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Draft</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-newspaper text-muted mb-3" style="font-size: 3rem;"></i>
                            <h5 class="text-muted">No articles found in this date range</h5>
                            <p class="text-muted">Try adjusting your date filter or check different time periods.</p>
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }

    .sidebar .nav-link {
        font-weight: 500;
        color: #333;
        border-radius: 0.375rem;
        margin: 0.125rem 0.5rem;
    }

    .sidebar .nav-link:hover {
        color: #007bff;
        background-color: rgba(0, 123, 255, 0.1);
    }

    .sidebar .nav-link.active {
        color: #007bff;
        background-color: rgba(0, 123, 255, 0.1);
    }

    main {
        margin-left: 240px;
    }

    .table th {
        border-top: none;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 