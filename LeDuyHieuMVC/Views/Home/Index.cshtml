@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold text-white mb-4">Welcome to FU News</h1>
                <p class="lead text-white-50 mb-5">Discover, share, and stay updated with the latest news and stories from our community.</p>
                <a asp-controller="NewsArticles" asp-action="Index" class="btn btn-light btn-lg rounded-pill px-5">
                    <i class="fas fa-newspaper me-2"></i>Explore News Feed
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card h-100">
                <div class="feature-icon">
                    <i class="fas fa-newspaper"></i>
                </div>
                <h5 class="fw-bold mb-3">News Feed</h5>
                <p class="text-muted mb-4">Discover the latest articles and stories shared by our community members.</p>
                <a asp-controller="NewsArticles" asp-action="Index" class="btn btn-primary rounded-pill">
                    <i class="fas fa-arrow-right me-2"></i>View Feed
                </a>
            </div>
        </div>
        
        @if (Context.Session.GetString("UserRole") == "1")
        {
            <div class="col-md-4">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-success">
                        <i class="fas fa-tags"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Categories</h5>
                    <p class="text-muted mb-4">Organize and manage article categories to keep content structured.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-success rounded-pill">
                        <i class="fas fa-arrow-right me-2"></i>Manage
                    </a>
                </div>
            </div>
        }
        
        
    </div>
</div>



<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 60vh;
        display: flex;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 300"><path fill="rgba(255,255,255,0.1)" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,133.3C672,139,768,181,864,181.3C960,181,1056,139,1152,133.3C1248,128,1344,160,1392,176L1440,192L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path></svg>') no-repeat bottom;
        background-size: cover;
    }

    .feature-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: none;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .feature-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2rem;
        color: white;
    }

    .feature-icon.bg-success {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
    }

    .feature-icon.bg-warning {
        background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%);
    }

    .stats-section {
        background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
        padding: 4rem 0;
        margin-top: 3rem;
    }

    .stat-item i {
        font-size: 3rem;
        display: block;
    }

    body {
        background-color: #f8f9fa;
    }

    .btn-lg {
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
    }

    .btn:hover {
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>
