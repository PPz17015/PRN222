@model BussinessObject.Category

@{
    ViewData["Title"] = "Xóa thể loại";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trash me-2"></i>Xác nhận xóa thể loại
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.CanDelete == false)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Không thể xóa thể loại này!</strong>
                            @if (ViewBag.HasChildren == true)
                            {
                                <br />
                            }
                            else
                            {
                                <br />
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa thể loại này không? Hành động này không thể hoàn tác.
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-info-circle me-2"></i>Thông tin thể loại
                                    </h5>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">ID:</dt>
                                        <dd class="col-sm-8">@Model.CategoryId</dd>
                                        
                                        <dt class="col-sm-4">Tên:</dt>
                                        <dd class="col-sm-8"><strong>@Model.CategoryName</strong></dd>
                                        
                                        <dt class="col-sm-4">Mô tả:</dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.CategoryDescription))
                                            {
                                                @Model.CategoryDescription
                                            }
                                            else
                                            {
                                                <em class="text-muted">Không có mô tả</em>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">Thể loại cha:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.ParentCategoryId.HasValue)
                                            {
                                                <span class="badge bg-secondary">ID: @Model.ParentCategoryId</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">Thể loại gốc</span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-4">Trạng thái:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.Status == true)
                                            {
                                                <span class="badge bg-success">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Không hoạt động</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-chart-bar me-2"></i>Thống kê
                                    </h5>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span>Thể loại con:</span>
                                        <span class="badge bg-info">
                                            @(ViewBag.HasChildren == true ? "Có" : "Không")
                                        </span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>Có thể xóa:</span>
                                        @if (ViewBag.CanDelete == true)
                                        {
                                            <span class="badge bg-success">Có</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Không</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.CategoryId" class="btn btn-info me-2">
                                <i class="fas fa-eye me-1"></i>Xem chi tiết
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-1"></i>Chỉnh sửa
                            </a>
                            @if (ViewBag.CanDelete == true)
                            {
                                <form asp-action="Delete" style="display: inline;">
                                    <input type="hidden" asp-for="CategoryId" />
                                    <button type="submit" class="btn btn-danger" 
                                            onclick="return confirm('Bạn có chắc chắn muốn xóa thể loại này không?')">
                                        <i class="fas fa-trash me-1"></i>Xác nhận xóa
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger" disabled>
                                    <i class="fas fa-ban me-1"></i>Không thể xóa
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
