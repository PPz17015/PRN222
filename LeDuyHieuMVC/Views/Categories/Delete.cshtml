@model BussinessObject.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trash me-2"></i>Confirm Category Deletion
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.CanDelete == false)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Cannot delete this category!</strong>
                            @if (ViewBag.HasChildren == true)
                            {
                                <p class="mb-0">This category has child categories. Please delete or reassign the child categories first.</p>
                            }
                            @if (ViewBag.HasArticles == true)
                            {
                                <p class="mb-0">This category contains articles. Please delete or reassign the articles first.</p>
                            }
                            @if (ViewBag.HasChildren != true && ViewBag.HasArticles != true)
                            {
                                <p class="mb-0">This category cannot be deleted due to system constraints.</p>
                            }
                        </div>
                        <div class="mt-3">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Warning!</strong> Are you sure you want to delete this category? This action cannot be undone.
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-info-circle me-2"></i>Category Details
                                </h5>
                                <dl class="row mb-0">
                                    <dt class="col-sm-3">Category Name:</dt>
                                    <dd class="col-sm-9">@Model.CategoryName</dd>

                                    <dt class="col-sm-3">Description:</dt>
                                    <dd class="col-sm-9">
                                        @if (string.IsNullOrEmpty(Model.CategoryDescription))
                                        {
                                            <span class="text-muted">No description</span>
                                        }
                                        else
                                        {
                                            @Model.CategoryDescription
                                        }
                                    </dd>

                                    <dt class="col-sm-3">Parent Category:</dt>
                                    <dd class="col-sm-9">
                                        @if (Model.ParentCategoryId.HasValue)
                                        {
                                            @ViewBag.ParentCategoryName
                                        }
                                        else
                                        {
                                            <span class="text-muted">None (Root Category)</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-3">Status:</dt>
                                    <dd class="col-sm-9">
                                        @if (Model.Status)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="CategoryId" />
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete Category
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
