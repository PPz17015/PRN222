@model BussinessObject.Category

@{
    ViewData["Title"] = "Chi tiết thể loại";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Chi tiết thể loại: @Model.CategoryName
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-tag me-2"></i>Thông tin cơ bản
                                    </h5>
                                    <dl class="row">
                                        <dt class="col-sm-3">ID thể loại:</dt>
                                        <dd class="col-sm-9">
                                            <span class="badge bg-primary">@Model.CategoryId</span>
                                        </dd>
                                        
                                        <dt class="col-sm-3">Tên thể loại:</dt>
                                        <dd class="col-sm-9">
                                            <strong class="fs-5">@Model.CategoryName</strong>
                                        </dd>
                                        
                                        <dt class="col-sm-3">Mô tả:</dt>
                                        <dd class="col-sm-9">
                                            @if (!string.IsNullOrEmpty(Model.CategoryDescription))
                                            {
                                                <p class="mb-0">@Model.CategoryDescription</p>
                                            }
                                            else
                                            {
                                                <em class="text-muted">Không có mô tả</em>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-3">Thể loại cha:</dt>
                                        <dd class="col-sm-9">
                                            @if (Model.ParentCategoryId.HasValue)
                                            {
                                                <span class="badge bg-secondary fs-6">
                                                    <i class="fas fa-sitemap me-1"></i>ID: @Model.ParentCategoryId
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary fs-6">
                                                    <i class="fas fa-home me-1"></i>Thể loại gốc
                                                </span>
                                            }
                                        </dd>
                                        
                                        <dt class="col-sm-3">Trạng thái:</dt>
                                        <dd class="col-sm-9">
                                            @if (Model.Status == true)
                                            {
                                                <span class="badge bg-success fs-6">
                                                    <i class="fas fa-check-circle me-1"></i>Hoạt động
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning fs-6">
                                                    <i class="fas fa-pause-circle me-1"></i>Không hoạt động
                                                </span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-chart-bar me-2"></i>Thống kê
                                    </h5>
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span><i class="fas fa-layer-group me-1"></i>Thể loại con:</span>
                                        <span class="badge bg-info">0</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span><i class="fas fa-newspaper me-1"></i>Bài viết:</span>
                                        <span class="badge bg-info">0</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span><i class="fas fa-calendar me-1"></i>Ngày tạo:</span>
                                        <span class="text-muted">N/A</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="card bg-light mt-3">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-cogs me-2"></i>Thao tác
                                    </h5>
                                    <div class="d-grid gap-2">
                                        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">
                                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-danger">
                                            <i class="fas fa-trash me-1"></i>Xóa thể loại
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-1"></i>Chỉnh sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Xóa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
