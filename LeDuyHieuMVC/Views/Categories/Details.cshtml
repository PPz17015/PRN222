@model BussinessObject.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Category Details: @Model.CategoryName
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-tag me-2"></i>Basic Information
                                    </h5>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-3">Category Name:</dt>
                                        <dd class="col-sm-9">@Model.CategoryName</dd>

                                        <dt class="col-sm-3">Description:</dt>
                                        <dd class="col-sm-9">
                                            @if (string.IsNullOrEmpty(Model.CategoryDescription))
                                            {
                                                <span class="text-muted">No description</span>
                                            }
                                            else
                                            {
                                                @Model.CategoryDescription
                                            }
                                        </dd>

                                        <dt class="col-sm-3">Parent Category:</dt>
                                        <dd class="col-sm-9">
                                            @if (Model.ParentCategoryId.HasValue)
                                            {
                                                @ViewBag.ParentCategoryName
                                            }
                                            else
                                            {
                                                <span class="text-muted">None (Root Category)</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-3">Status:</dt>
                                        <dd class="col-sm-9">
                                            @if (Model.Status)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-chart-bar me-2"></i>Statistics
                                    </h5>
                                    <div class="list-group list-group-flush">
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            Child Categories
                                            <span class="badge bg-primary rounded-pill">@ViewBag.ChildCategoriesCount</span>
                                        </div>
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            Articles
                                            <span class="badge bg-info rounded-pill">@ViewBag.ArticlesCount</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit Category
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Category
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
