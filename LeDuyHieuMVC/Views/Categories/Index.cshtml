@model IEnumerable<BussinessObject.Category>

@{
    ViewData["Title"] = "Quản lý thể loại";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-tags me-2"></i>Quản lý thể loại
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Thêm thể loại mới
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên thể loại</th>
                                        <th>Mô tả</th>
                                        <th>Thể loại cha</th>
                                        <th>Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.CategoryId</td>
                                            <td>
                                                <strong>@item.CategoryName</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.CategoryDescription))
                                                {
                                                    @(item.CategoryDescription.Length > 50 ? item.CategoryDescription.Substring(0, 50) + "..." : item.CategoryDescription)
                                                }
                                                else
                                                {
                                                    <em class="text-muted">Không có mô tả</em>
                                                }
                                            </td>
                                            <td>
                                                @if (item.ParentCategoryId.HasValue)
                                                {
                                                    var parentCategory = Model.FirstOrDefault(c => c.CategoryId == item.ParentCategoryId.Value);
                                                    if (parentCategory != null)
                                                    {
                                                        <span class="badge bg-secondary">@parentCategory.CategoryName</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">ID: @item.ParentCategoryId</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary">Thể loại gốc</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Status == true)
                                                {
                                                    <span class="badge bg-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Không hoạt động</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.CategoryId" 
                                                       class="btn btn-info btn-sm" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.CategoryId" 
                                                       class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.CategoryId" 
                                                       class="btn btn-danger btn-sm" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có thể loại nào</h5>
                            <p class="text-muted">Hãy thêm thể loại đầu tiên để bắt đầu.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Thêm thể loại mới
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
