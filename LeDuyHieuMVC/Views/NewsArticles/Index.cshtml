@model IEnumerable<BussinessObject.NewsArticle>

@{
    ViewData["Title"] = "Quản lý bài viết";
    var userRole = ViewBag.UserRole as string;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-newspaper me-2"></i>Quản lý bài viết
                    </h3>
                    @if (userRole == "1" || userRole == "3")
                    {
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Thêm bài viết mới
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Tiêu đề</th>
                                        <th>Danh mục</th>
                                        <th>Tác giả</th>
                                        <th>Ngày tạo</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.Headline</strong>
                                                @if (!string.IsNullOrEmpty(item.NewsContent) && item.NewsContent.Length > 100)
                                                {
                                                    <br><small class="text-muted">@(item.NewsContent.Substring(0, 100))...</small>
                                                }
                                                else if (!string.IsNullOrEmpty(item.NewsContent))
                                                {
                                                    <br><small class="text-muted">@item.NewsContent</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.Category?.CategoryName</span>
                                            </td>
                                            <td>@item.Account?.AccountEmail</td>
                                            <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (item.NewsStatus == true)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-eye me-1"></i>Đã xuất bản
                                                    </span>
                                                    @if (userRole == "1" || userRole == "3")
                                                    {
                                                        <form asp-action="Unpublish" method="post" class="d-inline ms-1">
                                                            <input type="hidden" name="id" value="@item.NewsArticleId" />
                                                            <button type="submit" class="btn btn-sm btn-outline-warning" 
                                                                    onclick="return confirm('Bạn có chắc muốn hủy xuất bản bài viết này?')">
                                                                <i class="fas fa-eye-slash"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-eye-slash me-1"></i>Chưa xuất bản
                                                    </span>
                                                    @if (userRole == "1" || userRole == "3")
                                                    {
                                                        <form asp-action="Publish" method="post" class="d-inline ms-1">
                                                            <input type="hidden" name="id" value="@item.NewsArticleId" />
                                                            <button type="submit" class="btn btn-sm btn-outline-success" 
                                                                    onclick="return confirm('Bạn có chắc muốn xuất bản bài viết này?')">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.NewsArticleId" 
                                                       class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (userRole == "1" || userRole == "3")
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.NewsArticleId" 
                                                           class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.NewsArticleId" 
                                                           class="btn btn-sm btn-outline-danger" title="Xóa">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có bài viết nào</h5>
                            @if (userRole == "1" || userRole == "3")
                            {
                                <a asp-action="Create" class="btn btn-primary mt-2">
                                    <i class="fas fa-plus me-1"></i>Tạo bài viết đầu tiên
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
