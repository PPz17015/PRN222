@model IEnumerable<BussinessObject.NewsArticle>

@{
    ViewData["Title"] = "News Feed";
    var userRole = ViewBag.UserRole as string;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fas fa-newspaper me-2 text-primary"></i>News Feed
                </h2>
                @if (userRole == "1" || userRole == "3")
                {
                    <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
                        <i class="fas fa-plus me-2"></i>Create Post
                    </a>
                }
            </div>

            <!-- Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded-3 mb-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-3 mb-4" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- News Feed -->
            @if (Model.Any())
            {
                @foreach (var article in Model.OrderByDescending(a => a.CreatedDate))
                {
                    <div class="card mb-4 shadow-sm border-0 rounded-3">
                        <!-- Post Header -->
                        <div class="card-header bg-white border-0 p-4">
                            <div class="d-flex align-items-center">
                                <!-- Author Avatar -->
                                <div class="avatar-circle me-3">
                                    <i class="fas fa-user text-white"></i>
                                </div>
                                
                                <!-- Author Info -->
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-bold text-dark">
                                        @if (article.Account != null)
                                        {
                                            @article.Account.AccountEmail.Split('@')[0]
                                        }
                                        else
                                        {
                                            <span class="text-muted">Unknown Author</span>
                                        }
                                    </h6>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>@article.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                        @if (article.Category != null)
                                        {
                                            <span class="mx-1">•</span>
                                            <span class="badge bg-light text-dark border">@article.Category.CategoryName</span>
                                        }
                                    </small>
                                </div>

                                <!-- Post Status & Actions -->
                                <div class="text-end d-flex align-items-center gap-2">
                                    @if (article.NewsStatus)
                                    {
                                        <span class="badge bg-success rounded-pill">
                                            <i class="fas fa-eye me-1"></i>Published
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill">
                                            <i class="fas fa-eye-slash me-1"></i>Draft
                                        </span>
                                    }

                                    @if (userRole == "1" || userRole == "3" || 
                                         (userRole == "2" && article.AccountId == ViewBag.CurrentUserId))
                                    {
                                        <!-- Action Dropdown -->
                                        <div class="dropdown">
                                            <button class="btn btn-link text-muted p-1" type="button" 
                                                    data-bs-toggle="dropdown" aria-expanded="false"
                                                    title="More actions">
                                                <i class="fas fa-ellipsis-h"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                                <li>
                                                    <a class="dropdown-item d-flex align-items-center" 
                                                       asp-action="Edit" asp-route-id="@article.NewsArticleId">
                                                        <i class="fas fa-edit text-warning me-2"></i>
                                                        <span>Edit Article</span>
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item d-flex align-items-center text-danger" 
                                                       asp-action="Delete" asp-route-id="@article.NewsArticleId">
                                                        <i class="fas fa-trash me-2"></i>
                                                        <span>Delete Article</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Post Content -->
                        <div class="card-body p-4 pt-0">
                            <!-- Post Title -->
                            <h5 class="fw-bold mb-3 text-dark">@article.Headline</h5>
                            
                            <!-- Post Preview -->
                            @if (!string.IsNullOrEmpty(article.NewsContent))
                            {
                                <div class="post-content mb-3">
                                    @{
                                        var preview = article.NewsContent.Length > 200 
                                            ? article.NewsContent.Substring(0, 200) + "..." 
                                            : article.NewsContent;
                                    }
                                    <p class="text-muted mb-0">@preview</p>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-newspaper text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="text-muted mb-3">No posts yet</h4>
                    <p class="text-muted mb-4">Be the first to share something interesting!</p>
                    @if (userRole == "1" || userRole == "3")
                    {
                        <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
                            <i class="fas fa-plus me-2"></i>Create First Post
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .card {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef !important;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
    }

    .post-content {
        line-height: 1.6;
        font-size: 0.95rem;
    }

    .btn-outline-primary:hover,
    .btn-outline-warning:hover,
    .btn-outline-danger:hover {
        transform: translateY(-1px);
    }

    .badge {
        font-size: 0.75rem;
        font-weight: 500;
    }

    .card-header {
        border-bottom: 1px solid #f8f9fa !important;
    }

    .card-footer {
        border-top: 1px solid #f8f9fa !important;
    }

    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    /* Dropdown Styling */
    .dropdown-toggle::after {
        display: none;
    }

    .dropdown-menu {
        border: none;
        border-radius: 12px;
        padding: 0.5rem 0;
        min-width: 160px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15) !important;
    }

    .dropdown-item {
        padding: 0.75rem 1rem;
        border-radius: 8px;
        margin: 0 0.5rem;
        transition: all 0.2s ease;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
        transform: translateX(4px);
    }

    .dropdown-item.text-danger:hover {
        background-color: #fff5f5;
        color: #dc3545 !important;
    }

    .btn-link:hover {
        background-color: rgba(0,0,0,0.05);
        border-radius: 50%;
    }

    .gap-2 {
        gap: 0.5rem !important;
    }

    /* Button animations */
    .btn-link {
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        text-decoration: none !important;
    }

    .btn-link:hover {
        text-decoration: none !important;
    }

    .btn-link:focus {
        box-shadow: 0 0 0 2px rgba(13, 110, 253, 0.25);
    }

    /* Animation for dropdown */
    .dropdown-menu {
        opacity: 0;
        transform: translateY(-10px);
        transition: all 0.2s ease;
    }

    .dropdown-menu.show {
        opacity: 1;
        transform: translateY(0);
    }

    .dropdown-divider {
        margin: 0.5rem 0;
        opacity: 0.3;
    }


        
</style>
