@model BussinessObject.NewsArticle

@{
    ViewData["Title"] = "Edit Article";
    var categories = ViewBag.Categories as List<BussinessObject.Category>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Edit Article
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="NewsArticleId" />
                        <input type="hidden" asp-for="AccountId" />
                        <input type="hidden" asp-for="CreatedDate" />
                        <input type="hidden" asp-for="UpdatedBy" />
                        <input type="hidden" asp-for="UpdatedDate" />
                        <input type="hidden" asp-for="ModifiedDate" />
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Headline" class="form-label">Headline</label>
                                    <input asp-for="Headline" class="form-control" required />
                                    <span asp-validation-for="Headline" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="NewsContent" class="form-label">Content</label>
                                    <textarea asp-for="NewsContent" class="form-control" rows="10" required></textarea>
                                    <span asp-validation-for="NewsContent" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Category</label>
                                    <select asp-for="CategoryId" class="form-select" required>
                                        <option value="">Select a category</option>
                                        @foreach (var category in categories)
                                        {
                                            <option value="@category.CategoryId">@category.CategoryName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="NewsStatus" class="form-check-input" type="checkbox" />
                                        <label asp-for="NewsStatus" class="form-check-label">Published</label>
                                    </div>
                                    <span asp-validation-for="NewsStatus" class="text-danger"></span>
                                </div>

                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-info-circle me-1"></i>Article Information
                                        </h6>
                                        <p class="card-text small mb-1">
                                            <span><strong>Created Date:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
                                        </p>
                                        <p class="card-text small mb-1">
                                            <strong>Author:</strong> @Model.Account?.AccountEmail
                                        </p>
                                        @if (Model.UpdatedDate.HasValue)
                                        {
                                            <p class="card-text small mb-1">
                                                <strong>Last Updated:</strong> @Model.UpdatedDate?.ToString("dd/MM/yyyy HH:mm")
                                            </p>
                                        }
                                        <p class="card-text small mb-0">
                                            <strong>Editor:</strong> @Context.Session.GetString("UserEmail")
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.NewsArticleId" class="btn btn-info me-2">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
