@model BussinessObject.NewsArticle

@{
    ViewData["Title"] = "Create New Article";
    var categories = ViewBag.Categories as List<BussinessObject.Category>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-plus me-2"></i>Create New Article
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @* <!-- DEBUG INFO -->
                    <!-- @if (ViewBag.DebugUserId != null)
                    {
                        <div class="alert alert-info">
                            <h6>Debug Info:</h6>
                            <p><strong>User ID:</strong> @ViewBag.DebugUserId</p>
                            <p><strong>User Email:</strong> @ViewBag.DebugUserEmail</p>
                            <p><strong>Session Email:</strong> @ViewBag.DebugSessionEmail</p>
                            <p><strong>Session Keys:</strong> @ViewBag.DebugSessionKeys</p>
                            <p><strong>GetUserId Error:</strong> @ViewBag.DebugGetUserIdError</p>
                            <p><strong>Account Lookup:</strong> @ViewBag.DebugAccountLookup</p>
                            <p><strong>Account Check:</strong> @ViewBag.DebugAccount</p>
                            <p><strong>Category Check:</strong> @ViewBag.DebugCategory</p>
                            <p><strong>ModelState Valid:</strong> @ViewBag.DebugModelState</p>
                            <p><strong>Data:</strong> @ViewBag.DebugData</p>
                            @if (ViewBag.DebugModelStateErrors != null)
                            {
                                <p><strong>ModelState Errors:</strong> @ViewBag.DebugModelStateErrors</p>
                            }
                            <p><strong>Service Result:</strong> @ViewBag.DebugServiceResult</p>
                            @if (ViewBag.DebugException != null)
                            {
                                <p><strong>Exception:</strong> @ViewBag.DebugException</p>
                            }
                        </div>
                    } --> *@

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="AccountId" value="@ViewBag.CurrentUserId" />
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Headline" class="form-label">Headline</label>
                                    <input asp-for="Headline" class="form-control" required />
                                    <span asp-validation-for="Headline" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="NewsContent" class="form-label">Content</label>
                                    <textarea asp-for="NewsContent" class="form-control" rows="10" required></textarea>
                                    <span asp-validation-for="NewsContent" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Category</label>
                                    <select asp-for="CategoryId" class="form-select" required>
                                        <option value="">Select a category</option>
                                        @foreach (var category in categories)
                                        {
                                            <option value="@category.CategoryId">@category.CategoryName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="NewsStatus" class="form-check-input" type="checkbox" />
                                        <label asp-for="NewsStatus" class="form-check-label">Publish immediately</label>
                                    </div>
                                    <span asp-validation-for="NewsStatus" class="text-danger"></span>
                                </div>

                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-info-circle me-1"></i>Thông tin
                                        </h6>
                                        <p class="card-text small mb-1">
                                            <strong>Ngày tạo:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                                        </p>
                                        <p class="card-text small mb-0">
                                            <strong>Tác giả:</strong> @Context.Session.GetString("UserEmail")
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Create Article
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
