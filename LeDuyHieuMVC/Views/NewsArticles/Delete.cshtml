@model BussinessObject.NewsArticle

@{
    ViewData["Title"] = "Delete Article";
    var canDelete = ViewBag.CanDelete as bool? ?? true;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Article Deletion
                    </h3>
                </div>
                <div class="card-body">
                    @if (!canDelete)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Warning:</strong> This article cannot be deleted because it may be referenced by other data in the system.
                        </div>
                    }

                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Are you sure you want to delete this article?</strong>
                        <br>This action cannot be undone!
                    </div>

                    <div class="card bg-light mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-info-circle me-2"></i>Article Details
                            </h5>
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Headline:</dt>
                                <dd class="col-sm-9">@Model.Headline</dd>

                                <dt class="col-sm-3">Category:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Category != null)
                                    {
                                        <span class="badge bg-info">@Model.Category.CategoryName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Author:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Account != null)
                                    {
                                        @Model.Account.AccountEmail
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Created Date:</dt>
                                <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-3">Status:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.NewsStatus)
                                    {
                                        <span class="badge bg-success">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Draft</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="NewsArticleId" />
                        <div class="d-grid gap-2">
                            @if (canDelete)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete Article
                                </button>
                            }
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
