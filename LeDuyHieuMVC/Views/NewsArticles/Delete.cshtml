@model BussinessObject.NewsArticle

@{
    ViewData["Title"] = "Xóa bài viết";
    var canDelete = ViewBag.CanDelete as bool? ?? true;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa bài viết
                    </h3>
                </div>
                <div class="card-body">
                    @if (!canDelete)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Cảnh báo:</strong> Bài viết này không thể xóa vì có thể đang được tham chiếu bởi dữ liệu khác trong hệ thống.
                        </div>
                    }

                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Bạn có chắc chắn muốn xóa bài viết này không?</strong>
                        <br>Hành động này không thể hoàn tác!
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h4 class="text-primary mb-3">@Model.Headline</h4>
                                    
                                    <div class="mb-3">
                                        <div class="d-flex align-items-center text-muted mb-2">
                                            <i class="fas fa-user me-2"></i>
                                            <span class="me-3"><strong>Tác giả:</strong> @Model.Account?.AccountEmail</span>
                                            <i class="fas fa-calendar me-2"></i>
                                         <span><strong>Ngày tạo:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-folder me-2"></i>
                                            <span class="me-3"><strong>Danh mục:</strong> 
                                                <span class="badge bg-info">@Model.Category?.CategoryName</span>
                                            </span>
                                            <span class="badge @(Model.NewsStatus == true ? "bg-success" : "bg-secondary")">
                                                <i class="fas @(Model.NewsStatus == true ? "fa-eye" : "fa-eye-slash") me-1"></i>
                                                @(Model.NewsStatus == true ? "Đã xuất bản" : "Chưa xuất bản")
                                            </span>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <h6><i class="fas fa-align-left me-2"></i>Nội dung:</h6>
                                        <div class="border rounded p-2 bg-white" style="max-height: 200px; overflow-y: auto;">
                                            @if (!string.IsNullOrEmpty(Model.NewsContent))
                                            {
                                                <div style="white-space: pre-wrap;">@Model.NewsContent</div>
                                            }
                                            else
                                            {
                                                <em class="text-muted">Chưa có nội dung</em>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-info-circle me-1"></i>Thông tin chi tiết
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <strong>ID:</strong> @Model.NewsArticleId
                                    </div>
                                                                         <div class="mb-2">
                                         <strong>Ngày tạo:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                     </div>
                                    @if (Model.UpdatedDate.HasValue)
                                    {
                                        <div class="mb-2">
                                            <strong>Cập nhật lần cuối:</strong> @Model.UpdatedDate?.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    }
                                    @if (Model.UpdatedBy.HasValue && Model.UpdatedBy > 0)
                                    {
                                        <div class="mb-2">
                                            <strong>Người cập nhật:</strong> ID @Model.UpdatedBy
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                        </a>
                        
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.NewsArticleId" class="btn btn-info me-2">
                                <i class="fas fa-eye me-1"></i>Xem chi tiết
                            </a>
                            
                            @if (canDelete)
                            {
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" asp-for="NewsArticleId" />
                                    <button type="submit" class="btn btn-danger" 
                                            onclick="return confirm('Bạn có CHẮC CHẮN muốn xóa bài viết này không? Hành động này không thể hoàn tác!')">
                                        <i class="fas fa-trash me-1"></i>Xác nhận xóa
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger" disabled>
                                    <i class="fas fa-ban me-1"></i>Không thể xóa
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
