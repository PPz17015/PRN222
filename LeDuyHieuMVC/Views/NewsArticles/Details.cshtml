@model BussinessObject.NewsArticle

@{
    ViewData["Title"] = "Article Details";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Back Button -->
            <div class="mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                    <i class="fas fa-arrow-left me-2"></i>Back to Feed
                </a>
            </div>

            <!-- Article Post -->
            <div class="card shadow-sm border-0 rounded-3">
                <!-- Post Header -->
                <div class="card-header bg-white border-0 p-4">
                    <div class="d-flex align-items-center">
                        <!-- Author Avatar -->
                        <div class="avatar-circle me-3">
                            <i class="fas fa-user text-white"></i>
                        </div>
                        
                        <!-- Author Info -->
                        <div class="flex-grow-1">
                            <h6 class="mb-0 fw-bold text-dark">
                                @if (Model.Account != null)
                                {
                                    @Model.Account.AccountEmail.Split('@')[0]
                                    <small class="text-muted d-block">(@Model.Account.AccountEmail)</small>
                                }
                                else
                                {
                                    <span class="text-muted">Unknown Author</span>
                                }
                            </h6>
                            <div class="d-flex align-items-center text-muted mt-1">
                                <i class="fas fa-clock me-1"></i>
                                <span>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
                                @if (Model.Category != null)
                                {
                                    <span class="mx-2">•</span>
                                    <span class="badge bg-light text-dark border">
                                        <i class="fas fa-tag me-1"></i>@Model.Category.CategoryName
                                    </span>
                                }
                            </div>
                        </div>

                        <!-- Post Status -->
                        <div class="text-end">
                            @if (Model.NewsStatus)
                            {
                                <span class="badge bg-success rounded-pill">
                                    <i class="fas fa-eye me-1"></i>Published
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary rounded-pill">
                                    <i class="fas fa-eye-slash me-1"></i>Draft
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Post Content -->
                <div class="card-body p-4 pt-0">
                    <!-- Post Title -->
                    <h2 class="fw-bold mb-4 text-dark post-title">@Model.Headline</h2>
                    
                    <!-- Post Content -->
                    @if (!string.IsNullOrEmpty(Model.NewsContent))
                    {
                        <div class="post-content">
                            <div class="content-text">
                                @Model.NewsContent
                            </div>
                        </div>
                    }
                </div>

                <!-- Post Footer -->
                <div class="card-footer bg-light border-0 p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Post Info -->
                        <div class="text-muted">
                            <small>
                                <i class="fas fa-newspaper me-1"></i>Article ID: @Model.NewsArticleId
                                @if (Model.UpdatedDate.HasValue)
                                {
                                    <span class="ms-3">
                                        <i class="fas fa-edit me-1"></i>Last updated: @Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                }
                            </small>
                        </div>

                        <!-- Action Buttons -->
                        @if (userRole == "1" || userRole == "3" || 
                             (userRole == "2" && Model.AccountId == ViewBag.CurrentUserId))
                        {
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@Model.NewsArticleId" 
                                   class="btn btn-outline-warning btn-sm rounded-pill me-2">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.NewsArticleId" 
                                   class="btn btn-outline-danger btn-sm rounded-pill">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Similar Posts Section -->
            <div class="mt-5">
                <h4 class="fw-bold mb-4">
                    <i class="fas fa-layer-group me-2 text-primary"></i>More from this category
                </h4>
                <div class="alert alert-light">
                    <i class="fas fa-info-circle me-2"></i>
                    Related articles from <strong>@Model.Category?.CategoryName</strong> category will be shown here.
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .card {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef !important;
    }

    .post-title {
        font-size: 2rem;
        line-height: 1.3;
        color: #2d3748;
    }

    .post-content {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #4a5568;
    }

    .content-text {
        white-space: pre-wrap;
        word-wrap: break-word;
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 15px;
        border-left: 4px solid #667eea;
    }

    .badge {
        font-size: 0.75rem;
        font-weight: 500;
    }

    .card-header {
        border-bottom: 1px solid #f8f9fa !important;
    }

    .card-footer {
        border-top: 1px solid #f8f9fa !important;
    }

    body {
        background-color: #f8f9fa;
    }

    .container {
        margin-top: 2rem;
        margin-bottom: 3rem;
    }

    .btn:hover {
        transform: translateY(-1px);
        transition: all 0.3s ease;
    }

    .btn-group .btn {
        border-radius: 20px !important;
    }

    .alert-light {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 15px;
        padding: 1.5rem;
    }

    
</style>
