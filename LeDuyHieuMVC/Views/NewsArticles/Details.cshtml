@model BussinessObject.NewsArticle

@{
    ViewData["Title"] = "Chi tiết bài viết";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-newspaper me-2"></i>Chi tiết bài viết
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h2 class="text-primary">@Model.Headline</h2>
                                <div class="d-flex align-items-center text-muted mb-3">
                                    <i class="fas fa-user me-2"></i>
                                    <span class="me-3">@Model.Account?.AccountEmail</span>
                                    <i class="fas fa-calendar me-2"></i>
                                                                         <span class="me-3">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
                                    <span class="badge @(Model.NewsStatus == true ? "bg-success" : "bg-secondary")">
                                        <i class="fas @(Model.NewsStatus == true ? "fa-eye" : "fa-eye-slash") me-1"></i>
                                        @(Model.NewsStatus == true ? "Đã xuất bản" : "Chưa xuất bản")
                                    </span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <h5><i class="fas fa-align-left me-2"></i>Nội dung bài viết</h5>
                                <div class="border rounded p-3 bg-light">
                                    @if (!string.IsNullOrEmpty(Model.NewsContent))
                                    {
                                        <div style="white-space: pre-wrap;">@Model.NewsContent</div>
                                    }
                                    else
                                    {
                                        <em class="text-muted">Chưa có nội dung</em>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light mb-3">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-info-circle me-1"></i>Thông tin bài viết
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <strong>ID:</strong> @Model.NewsArticleId
                                    </div>
                                    <div class="mb-2">
                                        <strong>Danh mục:</strong>
                                        <span class="badge bg-info">@Model.Category?.CategoryName</span>
                                    </div>
                                    <div class="mb-2">
                                        <strong>Tác giả:</strong> @Model.Account?.AccountEmail
                                    </div>
                                                                         <div class="mb-2">
                                         <strong>Ngày tạo:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                     </div>
                                    @if (Model.UpdatedDate.HasValue)
                                    {
                                        <div class="mb-2">
                                            <strong>Cập nhật lần cuối:</strong> @Model.UpdatedDate?.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    }
                                    @if (Model.UpdatedBy.HasValue && Model.UpdatedBy > 0)
                                    {
                                        <div class="mb-2">
                                            <strong>Người cập nhật:</strong> ID @Model.UpdatedBy
                                        </div>
                                    }
                                    <div class="mb-0">
                                        <strong>Trạng thái:</strong>
                                        <span class="badge @(Model.NewsStatus == true ? "bg-success" : "bg-secondary")">
                                            <i class="fas @(Model.NewsStatus == true ? "fa-eye" : "fa-eye-slash") me-1"></i>
                                            @(Model.NewsStatus == true ? "Đã xuất bản" : "Chưa xuất bản")
                                        </span>
                                    </div>
                                </div>
                            </div>

                            @if (userRole == "1" || userRole == "3")
                            {
                                <div class="card">
                                    <div class="card-header">
                                        <h6 class="card-title mb-0">
                                            <i class="fas fa-cogs me-1"></i>Thao tác
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-grid gap-2">
                                            <a asp-action="Edit" asp-route-id="@Model.NewsArticleId" class="btn btn-primary">
                                                <i class="fas fa-edit me-1"></i>Chỉnh sửa
                                            </a>
                                            
                                            @if (Model.NewsStatus == true)
                                            {
                                                <form asp-action="Unpublish" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@Model.NewsArticleId" />
                                                    <button type="submit" class="btn btn-warning w-100" 
                                                            onclick="return confirm('Bạn có chắc muốn hủy xuất bản bài viết này?')">
                                                        <i class="fas fa-eye-slash me-1"></i>Hủy xuất bản
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="Publish" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@Model.NewsArticleId" />
                                                    <button type="submit" class="btn btn-success w-100" 
                                                            onclick="return confirm('Bạn có chắc muốn xuất bản bài viết này?')">
                                                        <i class="fas fa-eye me-1"></i>Xuất bản
                                                    </button>
                                                </form>
                                            }
                                            
                                            <a asp-action="Delete" asp-route-id="@Model.NewsArticleId" class="btn btn-danger">
                                                <i class="fas fa-trash me-1"></i>Xóa bài viết
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <hr>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                        </a>
                        @if (userRole == "1" || userRole == "3")
                        {
                            <a asp-action="Edit" asp-route-id="@Model.NewsArticleId" class="btn btn-primary">
                                <i class="fas fa-edit me-1"></i>Chỉnh sửa bài viết
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
